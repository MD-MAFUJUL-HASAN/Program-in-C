#include<stdio.h>
int main()
{
    int i,n=5,a[n];
    printf("Enter array size: ");
    scanf("%d",&n);
    printf("\nEnter array Elements: ");
    for(i=0;i<n;i++)
    {
        scanf("%d\n",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        if(a[i]%2==0)
        {
            printf("%d is Even number\n",a[i]);
        }
        else
        {
            printf("%d is Odd number\n",a[i]);
        }
    }
    return 0;
}


---------------------------------------------------------

output--

Enter array size: 5

Enter array Elements: 1
2
3
4
5
6
1 is Odd number
2 is Even number
3 is Odd number
4 is Even number
5 is Odd number

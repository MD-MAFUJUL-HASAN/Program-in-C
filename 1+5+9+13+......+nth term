#include <stdio.h>
int main()
{
    int i,j,n,sum=0;
    while(1)
    {
        printf("Enter the value of N: ");
        scanf("%d", &n);
        for(i=1; i<=n; i++)
        {
            j=4*i-3;
            sum=sum+j;
            printf("%d + ", j);

        }
        printf("\nSum of the total value : %d\n\n", sum);
    }
    return 0;
}
